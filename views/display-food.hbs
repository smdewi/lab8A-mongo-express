{{#extends "base"}}
    {{#block "content"}}
    <h1>Food Record</h1>
    <a href="add-food" class="btn btn-primary">Add new food item</a>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Calories</th>
                <th>Tags</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each foodRecords}}
                <tr>
                    <td>{{this.foodRecordName}}</td>
                    <td>{{this.calories}}</td>
                    <td>
                        {{#each this.tags}}
                            <span class="badge bg-primary">{{this}}</span>
                        {{/each}}
                    </td>
                    <td>
                        <a href="#" class="btn btn-primary btn-sm">Edit</a>
                        <a href="#" class="btn btn-danger btn-sm">Delete</a>
                        <a href="#" class="btn btn-secondary btn-sm">Details</a>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
    {{/block}}
{{/extends}}